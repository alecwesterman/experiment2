= form_for @fact do |f|
  - if @fact.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fact.errors.count, "error")} prohibited this fact from being saved:"
      %ul
        - @fact.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
